<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox alignment="TOP_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tasnetwork.calibration.energymeter.project.ReportGeneratorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <!-- Left Section: Template Selection and Preview -->
        <VBox alignment="TOP_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                <Label text="Report Templates">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <ListView fx:id="templateListView" VBox.vgrow="ALWAYS" minHeight="150.0" prefHeight="200.0" />
                <Label fx:id="noPreviewLabel" text="Select a template to see its preview." wrapText="true" />
                <!-- Replaced ImageView with TextArea for CSV content preview -->
                <TextArea fx:id="templatePreviewTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" minHeight="150.0" prefHeight="200.0" />
            </children>
        </VBox>

        <!-- Right Section: Fan Search, Table, and Report Generation -->
        <VBox alignment="TOP_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                <Label text="Fan Management">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Search Fan by ID(s):" />
                        <TextField fx:id="serialInputTextField" promptText="e.g., 101, 105-110" HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleSearchFans" text="Search" />
                    </children>
                </HBox>
                <Label fx:id="errorMessageLabel" style="-fx-text-fill: red;" text="" wrapText="true" />

                <Label fx:id="noResultsLabel" text="No fan results to display. Use the search above." visible="false" />
                <TableView fx:id="fanTableView" VBox.vgrow="ALWAYS" minHeight="200.0" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="selectColumn" prefWidth="75.0" text="Select" />
                        <TableColumn fx:id="serialColumn" prefWidth="100.0" text="Serial" />
                        <TableColumn fx:id="modelColumn" prefWidth="100.0" text="Model" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="lastServiceColumn" prefWidth="120.0" text="Last Service" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <CheckBox fx:id="selectAllCheckbox" text="Select All" />
                <Button fx:id="generateReportButton" onAction="#handleGenerateReport" text="Generate Report (0 selected)" disable="true">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>
